{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier", "prettier/react", "plugin:prettier/recommended"],
  "plugins": ["babel", "react", "react-hooks", "prettier"],
  "env": {
    "browser": true
  },
  "globals": {
    "google": false,
    "alert": false,
    "css": true,
    "console": true,
    "process": true
  },
  "rules": {
    "no-param-reassign": [
      "error",
      { "props": true, "ignorePropertyModificationsFor": ["draftState"] }
    ],
    "prettier/prettier": "error",
    "import/prefer-default-export": 0,
    "no-console": 0,
    "require-jsdoc": 0,
    "semi": [2, "never"],
    "no-invalid-this": 0,
    "babel/no-invalid-this": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
